{
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "jsdoc-format": [
            true,
            "check-multiline-start"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "trailing-comma": [
            true,
            "never"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "eofline": true,
        "prefer-const": true,
        "prefer-for-of": true,
        "prefer-method-signature": true,
        "prefer-object-spread": true,
        "prefer-readonly": true,
        "prefer-while": true,
        "no-switch-case-fall-through": true
    }
}