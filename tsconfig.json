{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2015",
        "rootDir": "src",
        "outDir": "lib",
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "declaration": true
    }
}